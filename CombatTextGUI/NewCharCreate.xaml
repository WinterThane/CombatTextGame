<Page x:Class="CombatTextGUI.NewCharCreate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CombatTextGUI"
      mc:Ignorable="d" 
      d:DesignHeight="980" d:DesignWidth="1280"
      Background="LightGray"
      Title="NewCharCreate">

    <Page.Resources>
        <Style x:Key="AttributesText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="20, 5, 0, 5" />
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="1" Grid.Row="0" Grid.Column="0" />
        
        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
            <ComboBox Name="CharacterClassesCB" ItemsSource="{Binding classes}" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="2">
            <Grid Margin="0, 5, 30, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="Attributes" 
                           Grid.Row="0" Grid.Column="0" 
                           Style="{StaticResource AttributesText}" 
                           HorizontalAlignment="Center" />
                <TextBlock Text="Strength" Grid.Row="1" Grid.Column="0" Style="{StaticResource AttributesText}" />
                <TextBlock Text="Intelligence" Grid.Row="2" Grid.Column="0" Style="{StaticResource AttributesText}" />
                <TextBlock Text="Dexterity" Grid.Row="3" Grid.Column="0" Style="{StaticResource AttributesText}" />
                <TextBlock Text="Vitality" Grid.Row="4" Grid.Column="0" Style="{StaticResource AttributesText}" />
                <TextBlock Text="Speed" Grid.Row="5" Grid.Column="0" Style="{StaticResource AttributesText}" />

                <Button Content="+" Grid.Row="1" Grid.Column="1" Margin="3" />
                <Button Content="+" Grid.Row="2" Grid.Column="1" Margin="3" />
                <Button Content="+" Grid.Row="3" Grid.Column="1" Margin="3" />
                <Button Content="+" Grid.Row="4" Grid.Column="1" Margin="3" />
                <Button Content="+" Grid.Row="5" Grid.Column="1" Margin="3" />

                <TextBox Text="x" Grid.Row="1" Grid.Column="2" Margin="3" IsReadOnly="True" />
                <TextBox Text="x" Grid.Row="2" Grid.Column="2" Margin="3" IsReadOnly="True" />
                <TextBox Text="x" Grid.Row="3" Grid.Column="2" Margin="3" IsReadOnly="True" />
                <TextBox Text="x" Grid.Row="4" Grid.Column="2" Margin="3" IsReadOnly="True" />
                <TextBox Text="x" Grid.Row="5" Grid.Column="2" Margin="3" IsReadOnly="True" />

                <Button Content="-" Grid.Row="1" Grid.Column="3" Margin="3" />
                <Button Content="-" Grid.Row="2" Grid.Column="3" Margin="3" />
                <Button Content="-" Grid.Row="3" Grid.Column="3" Margin="3" />
                <Button Content="-" Grid.Row="4" Grid.Column="3" Margin="3" />
                <Button Content="-" Grid.Row="5" Grid.Column="3" Margin="3" />
            </Grid>
        </StackPanel>
        
        <Button Content="4" Grid.Row="1" Grid.Column="0" />
        <Button Content="5" Grid.Row="1" Grid.Column="1" />
        <Button Content="6" Grid.Row="1" Grid.Column="2" />
        <Button Content="7" Grid.Row="2" Grid.Column="0" />
        <Button Content="8" Grid.Row="2" Grid.Column="1" />
        <Button Content="9" Grid.Row="2" Grid.Column="2" />
    </Grid>
</Page>
